algoritmo "area do triangulo"

var
  valor1,valor2,valor_final:real
  
inicio
  escreval("qual o valor ta altura do triangulo?")
  leia(valor1)
  escreval("qual o valor da base do triangulo?")
  leia(valor2)
  
  valor_final<-(valor1*valor2)/2
  
  escreval
  escreval("a area do triangulo é:",valor_final)
fimalgoritmo
