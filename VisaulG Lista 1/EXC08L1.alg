algoritmo "volume de piramide"

var
  l,h,volume_da_piramide:real
inicio
  escreval("qual é o valor do lado da base da piramide?")
  leia(l)
  escreval("qual a altura da piramide?")
  leia(h)
  
  volume_da_piramide<-(l*l)*(h/3)
  
  escreval
  escreval("o volume da piramide é:",volume_da_piramide)
fimalgoritmo
